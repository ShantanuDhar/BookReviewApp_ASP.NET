@{
    ViewData["Title"] = "Get Reviews by Book Title";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>@ViewData["Title"]</title>
    <style>
        .search-bar {
            display: flex;
            justify-content: flex-end;
            margin: 20px 0;
        }

            .search-bar input {
                width: 300px;
                padding: 5px;
            }

            .search-bar button {
                margin-left: 10px;
                padding: 5px 10px;
                border: none;
                background: #007bff;
                color: white; /* Change this to desired icon color */
            }

        .table-container {
            max-height: 400px; /* Adjust this value as needed */
            overflow-y: auto;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
        }

        th, td {
            text-align: center;
        }

        footer {
            position: relative;
            bottom: 0;
            width: 100%;
            padding: 10px 0;
            text-align: center;
            background-color: #f8f9fa;
            box-shadow: 0 -1px 10px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="search-bar">
            <form asp-action="GetReviews" method="get" class="form-inline">
                <input type="text" name="bookTitle" class="form-control" id="bookTitle" placeholder="Enter Book Title">
                <button type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>
        <div>
            @if (ViewBag.Reviews != null && ViewBag.Reviews.Count > 0)
            {
                <h2 class="text-center">Reviews for Book: @ViewBag.BookTitle</h2>
                <div class="table-container">
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>Book Title</th>
                                <th>Review Text</th>
                                <th>Rating</th>
                                <th>Created Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var review in ViewBag.Reviews)
                            {
                                <tr>
                                    <td>@review.BookTitle</td>
                                    <td>@review.ReviewText</td>
                                    <td>@review.Rating</td>
                                    <td>@review.CreatedDate.ToString("dd MMM yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <h2 class="text-center">No reviews found</h2>
            }
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>