@model BookReviewApp.Models.Book
@{
    ViewData["Title"] = "Add Book";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <title>Add Book - @ViewData["Title"]</title>
    <style>
        .form-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

        .form-group {
            position: relative;
        }

            .form-group i {
                position: absolute;
                top: 50%;
                left: 10px;
                transform: translateY(-50%);
            }

        .form-control {
            padding-left: 30px;
        }

        .btn-primary {
            width: 100%;
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="form-container">
            <h2 class="text-center">@ViewData["Title"]</h2>
            <form id="bookForm" asp-action="AddBook">
                <div class="form-group">
                    <i class="fas fa-book"></i>
                    <label for="bookTitle" class="sr-only">Title</label>
                    <input asp-for="Title" type="text" class="form-control" id="bookTitle" placeholder="Title" required>
                </div>
                <div class="form-group">
                    <i class="fas fa-user"></i>
                    <label for="bookAuthor" class="sr-only">Author</label>
                    <input asp-for="Author" type="text" class="form-control" id="bookAuthor" placeholder="Author" required>
                </div>
                <div class="form-group">
                    <i class="fas fa-tags"></i>
                    <label for="bookGenre" class="sr-only">Genre</label>
                    <input asp-for="Genre" type="text" class="form-control" id="bookGenre" placeholder="Genre" required>
                </div>
                <button type="submit" class="btn btn-primary">Add Book</button>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
